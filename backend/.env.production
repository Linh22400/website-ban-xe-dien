# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this to .env on production server

# Server
HOST=0.0.0.0
PORT=1337
CLIENT_URL=https://xedienducduy.id.vn,https://www.xedienducduy.id.vn

# Backend URL (IMPORTANT: Set this for production)
# Local: leave empty (auto-detects http://localhost:1337)
# Production: set to your backend domain
BACKEND_URL=https://your-backend-domain.com

# Secrets (GENERATE NEW ONES!)
APP_KEYS=REPLACE_WITH_NEW_KEYS
API_TOKEN_SALT=REPLACE_WITH_NEW_SALT
ADMIN_JWT_SECRET=REPLACE_WITH_NEW_SECRET
TRANSFER_TOKEN_SALT=REPLACE_WITH_NEW_SALT
ENCRYPTION_KEY=REPLACE_WITH_NEW_KEY
JWT_SECRET=REPLACE_WITH_NEW_SECRET

# Database
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://YOUR_DATABASE_URL
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Cloudinary
CLOUDINARY_NAME=YOUR_CLOUDINARY_NAME
CLOUDINARY_KEY=YOUR_CLOUDINARY_KEY
CLOUDINARY_SECRET=YOUR_CLOUDINARY_SECRET

# =====================================================
# VNPAY PAYMENT (Works on both local & production!)
# =====================================================
VNPAY_TMN_CODE=YOUR_VNPAY_TMN_CODE
VNPAY_HASH_SECRET=YOUR_VNPAY_HASH_SECRET

# For Testing: Use sandbox URL
# For Production: Use production URL
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
# VNPAY_URL=https://vnpayment.vn/paymentv2/vpcpay.html

# =====================================================
# MOMO PAYMENT (Works on both local & production!)
# =====================================================
MOMO_PARTNER_CODE=YOUR_MOMO_PARTNER_CODE
MOMO_ACCESS_KEY=YOUR_MOMO_ACCESS_KEY
MOMO_SECRET_KEY=YOUR_MOMO_SECRET_KEY

# For Testing: Use test endpoint
# For Production: Use production endpoint
MOMO_ENDPOINT=https://test-payment.momo.vn
# MOMO_ENDPOINT=https://payment.momo.vn

# =====================================================
# FRONTEND URL
# =====================================================
FRONTEND_URL=https://your-frontend-domain.com

