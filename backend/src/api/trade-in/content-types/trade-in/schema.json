{
  "kind": "collectionType",
  "collectionName": "trade_ins",
  "info": {
    "singularName": "trade-in",
    "pluralName": "trade-ins",
    "displayName": "Trade-in"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "Customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "VehicleBrand": {
      "type": "string",
      "required": true
    },
    "VehicleModel": {
      "type": "string",
      "required": true
    },
    "VehicleYear": {
      "type": "integer",
      "required": true
    },
    "VehicleType": {
      "type": "enumeration",
      "enum": ["bicycle", "motorcycle", "scooter"],
      "required": true
    },
    "Condition": {
      "type": "enumeration",
      "enum": ["excellent", "good", "fair", "poor"],
      "required": true,
      "default": "good"
    },
    "Mileage": {
      "type": "integer",
      "required": true
    },
    "BatteryHealth": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 80
    },
    "HasAccidents": {
      "type": "boolean",
      "default": false
    },
    "HasModifications": {
      "type": "boolean",
      "default": false
    },
    "AdditionalNotes": {
      "type": "text"
    },
    "Photos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "EstimatedValue": {
      "type": "decimal",
      "default": 0
    },
    "AppraisedValue": {
      "type": "decimal"
    },
    "Status": {
      "type": "enumeration",
      "enum": ["pending", "appraised", "accepted", "rejected", "completed"],
      "default": "pending",
      "required": true
    },
    "AppraisalNotes": {
      "type": "text"
    },
    "Order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    },
    "ContactPhone": {
      "type": "string",
      "required": true
    },
    "ContactEmail": {
      "type": "email",
      "required": true
    },
    "PreferredContactMethod": {
      "type": "enumeration",
      "enum": ["phone", "email", "both"],
      "default": "phone"
    },
    "InspectionDate": {
      "type": "datetime"
    }
  }
}
