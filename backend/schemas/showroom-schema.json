                "monday": "8:00 - 18:00",
                "tuesday": "8:00 - 18:00",
                "wednesday": "8:00 - 18:00",
                "thursday": "8:00 - 18:00",
                "friday": "8:00 - 18:00",
                "saturday": "8:00 - 17:00",
