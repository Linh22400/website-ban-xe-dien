{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "discountTag": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "link": {
      "type": "string",
      "required": true
    },
    "expiryDate": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "discountPercent": {
      "type": "integer"
    },
    "car_models": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::car-model.car-model"
    }
  }
}
